<div class ="container">
    <div class = "row">
        <div class="col-3"></div>
        <div class = "col-6">
            <div class="w-100 badge-warning pl-6"> User Login </div>
            <form class="mb-4 bg-light border border-warning">
                <div class="m-4">
                    <label for="user-name"> User Name : </label>
                    <input type="text" id="user-name" name = "username" class="form-control">
                    <label for="first-name"> First Name : </label>
                    <input type="text" id="first-name" name = "firstname" class="form-control">
                    <label for="last-name"> Last Name : </label>
                    <input type="text" id="last-name" name = "lastname" class="form-control">
                    <label for="date-of-birth"> Date of birth : </label>
                    <input type="date" id="date-of-birth" name = "dob" class="form-control">
                    <label for="gender">Gender:</label>
                    <select class="form-control" id="gender">
                    <option value=""></option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    </select>
                    <label for="preference">Preference:</label>
                    <select class="form-control" id="preference">
                    <option value=""></option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    </select>
                    <label for="description">Description:</label>
                    <textarea class="form-control" id="description" rows="3"></textarea>
                    <label for="picture">Profile Picture:</label>
                    <input type="text" id="picture" class="form-control" required>
                    <label for="password"> Password : </label>
                    <input type="password" id="password" name = "password" class="form-control">
                    <label for="confirm-password"> Confirm Password : </label>
                    <input type="password" id="confirm-password" class="form-control">
                    <div class = "signup-validation"></div>
                    <hr>
                    <button class="btn bg-warning text-light btn-default" id="user-signup" type="submit">sign up</button>
                </div>
            </form>
        </div>
        <div class="col-3"></div>
    </div>
</div>
<script src="assets/js/signup.js"></script>
